{
  "name": "prism",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx || echo \"Linting completed with warnings\"",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix || echo \"Lint fix completed\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf .next out dist",
    "prebuild": "npm run clean && npm run type-check",
    "build:safe": "npm run clean && npm run type-check && next build"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@next/bundle-analyzer": "^15.5.3",
    "@react-three/fiber": "^9.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gsap": "^3.13.0",
    "gsap-trial": "^3.13.0",
    "lenis": "^1.3.11",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sass": "^1.92.1",
    "three": "^0.180.0",
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.12",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "9.35.0",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.2"
  }
}
